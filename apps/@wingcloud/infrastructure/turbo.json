{
  "$schema": "https://turborepo.org/schema.json",
  "extends": [
    "//"
  ],
  "pipeline": {
    "terraformInit": {
      "dependsOn": [
        "package.json"
      ],
      "outputs": [
        "target/main.tfaws/.terraform",
        "target/main.tfaws/.terraform.lock.hcl"
      ]
    },
    "compile": {
      "dependsOn": [
        "terraformInit"
      ],
      "dotEnv": [
        ".env"
      ],
      "outputs": [
        "target/main.tfaws/**",
        "!target/main.tfaws/.terraform.lock.hcl",
        "!target/main.tfaws/.terraform",
        "!target/main.tfaws/terraform.tfstate",
        "!target/main.tfaws/terraform.tfstate.backup"
      ]
    },
    "dev": {
      "dependsOn": [
        "^compile"
      ]
    },
    "deploy": {
      "dependsOn": [
        "^compile"
      ],
      "cache": false
    }
  }
}
